<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/lol1"
    android:layout_height="match_parent"
    tools:context=".Histori">

    <ImageButton
        android:id="@+id/tombol_home"
        android:layout_marginLeft="16dp"
        android:layout_width="40dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/home"
        android:backgroundTint="#FFFFFF" />

    <LinearLayout
        android:layout_centerVertical="true"
        android:id="@+id/histori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="50dp"
            android:gravity="center">
            <ImageButton
                android:id="@+id/histori_penjualan"
                android:layout_width="115dp"
                android:layout_height="130dp"
                android:background="#6D73C1FF"
                app:srcCompat="@drawable/trade" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Penjualan"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageButton
                android:id="@+id/histori_pembelian"
                android:layout_width="115dp"
                android:layout_height="130dp"
                android:background="#6D73C1FF"
                app:srcCompat="@drawable/cart" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pembelian"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/histori"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:backgroundTint="#FFFFFF"
            android:hint="Pendapatan Kotor: Rp. "
            android:inputType="number"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/pendapatan_kotor"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:hint="000000"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="20dp" />

    </LinearLayout>
</RelativeLayout>